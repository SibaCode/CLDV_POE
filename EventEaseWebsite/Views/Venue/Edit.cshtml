@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Edit Venue";
}

<h1 class="text-center my-4">Edit Venue</h1>

<div class="container">
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="VenueName" class="control-label">Venue Name</label>
            <input asp-for="VenueName" class="form-control" />
            <span asp-validation-for="VenueName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="control-label">Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="control-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="VenueId" />
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
