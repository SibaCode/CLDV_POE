@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1 class="text-center my-4">Delete Venue</h1>

<div class="container">
    <h4>Are you sure you want to delete the following venue?</h4>
    <hr />
 <div>
    <strong>Venue Name:</strong> @Model.VenueName
    <br />
    <strong>Location:</strong> @Model.Location
    <br />
    <strong>Capacity:</strong> @Model.Capacity
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
</div>