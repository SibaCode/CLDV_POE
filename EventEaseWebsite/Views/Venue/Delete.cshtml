@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>Delete Venue</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <strong>Venue Name:</strong> @Model.VenueName
    <br />
    <strong>Location:</strong> @Model.Location
    <br />
    <strong>Capacity:</strong> @Model.Capacity
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
