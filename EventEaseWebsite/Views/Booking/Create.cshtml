@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1>Create Booking</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EventId"></label>
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventList"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueList"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
