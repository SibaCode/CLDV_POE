@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Event Name</th>
            <th>Venue Name</th>
            <th>Booking Date</th>
            <th>Event Date</th>
            <th>Venue Location</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var booking in Model)
{
    <tr>
        <td>@booking.BookingId</td>
        <td>@booking.Event?.EventName</td>
        <td>@booking.Venue?.VenueName</td>
        <td>@booking.BookingDate.ToShortDateString()</td>
        <td>@booking.Event?.EventDate.ToShortDateString()</td>
        <td>@booking.Venue?.Location</td>
        <td>
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@booking.BookingId">Edit</a>
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
