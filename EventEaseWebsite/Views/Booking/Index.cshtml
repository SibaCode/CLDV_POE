@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings List";
}

<h1>Bookings List</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Booking</a>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Event?.EventName</td> <!-- Access Event Name -->
                <td>@item.Venue?.VenueName</td> <!-- Access Venue Name -->
                <td>@item.BookingDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
