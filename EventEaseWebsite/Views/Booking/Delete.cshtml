@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<h3>Are you sure you want to delete this booking?</h3>

<div>
    <strong>Event:</strong> @Model.Event.EventName
    <br />
    <strong>Venue:</strong> @Model.Venue.VenueName
    <br />
    <strong>Booking Date:</strong> @Model.BookingDate.ToString("MM/dd/yyyy")
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookingId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
