@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h1>Edit Booking</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookingId" />
    
    <div class="form-group">
        <label asp-for="EventId"></label>
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventList"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueList"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
