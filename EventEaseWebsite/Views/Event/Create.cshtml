@model EventEase.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<h2>Create Event</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    
    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueList"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
<div class="form-group">
        <label>Venue Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <div class="form-group">
    <button type="submit" class="btn btn-primary">Create</button>
     <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</div>
</form>
