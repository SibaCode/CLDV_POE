@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1 class="text-center my-4">Delete Venue</h1>

<div class="container">
    <h4>Are you sure you want to delete the following venue?</h4>
    <hr />
    <div>
        <h5>@Model.VenueName</h5>
        <p><strong>Location:</strong> @Model.Location</p>
        <p><strong>Capacity:</strong> @Model.Capacity</p>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="VenueId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
