@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-danger text-white">
            <h2>Delete Venue</h2>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Are you sure you want to delete this venue?</h4>
            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Name:</strong> @Model.VenueName</li>
                <li class="list-group-item"><strong>Location:</strong> @Model.Location</li>
                <li class="list-group-item"><strong>Capacity:</strong> @Model.Capacity</li>
            </ul>

          <form asp-action="Delete" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

        </div>
    </div>
</div>
