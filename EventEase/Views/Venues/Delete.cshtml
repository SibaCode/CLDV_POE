@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this venue?</h3>

<div>
    <h4>@Model.VenueName</h4>
    <p>@Model.Location</p>
    <p>@Model.Capacity</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Venue")" class="btn btn-secondary">Cancel</a>
</form>
