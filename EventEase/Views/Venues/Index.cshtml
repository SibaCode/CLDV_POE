@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venue List";
}

<h2>Venue List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.VenueName</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Venue</a>
