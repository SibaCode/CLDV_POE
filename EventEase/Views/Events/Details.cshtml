@model EventEase.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div>
    <h4>@Model.EventName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
